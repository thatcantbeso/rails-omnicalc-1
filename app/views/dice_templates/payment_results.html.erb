<h1>Payment Results</h1>


<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= params.fetch("users_apr").to_f.to_fs(:percentage, precision: 4) %>
  </dd>

  <dt>
    Number of Years
  </dt>
  <dd>
    <%= params.fetch("users_year") %>
  </dd>


  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.to_fs(:currency, precision: 2) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_fs(:currency, precision: 2) %>
  </dd>

<a href="/payment/new">
  Calculate another payment
</a>
